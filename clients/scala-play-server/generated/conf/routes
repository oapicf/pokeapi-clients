# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~


# Routes for Berries API

GET /api/v2/berry-firmness/                   api.BerriesApiController.berryFirmnessList()
GET /api/v2/berry-flavor/                     api.BerriesApiController.berryFlavorList()
GET /api/v2/berry/                            api.BerriesApiController.berryList()
GET /api/v2/berry-firmness/:id/               api.BerriesApiController.berryFirmnessRetrieve(id: String)
GET /api/v2/berry-flavor/:id/                 api.BerriesApiController.berryFlavorRetrieve(id: String)
GET /api/v2/berry/:id/                        api.BerriesApiController.berryRetrieve(id: String)

# Routes for Contests API

GET /api/v2/contest-effect/                   api.ContestsApiController.contestEffectList()
GET /api/v2/contest-type/                     api.ContestsApiController.contestTypeList()
GET /api/v2/super-contest-effect/             api.ContestsApiController.superContestEffectList()
GET /api/v2/contest-effect/:id/               api.ContestsApiController.contestEffectRetrieve(id: String)
GET /api/v2/contest-type/:id/                 api.ContestsApiController.contestTypeRetrieve(id: String)
GET /api/v2/super-contest-effect/:id/         api.ContestsApiController.superContestEffectRetrieve(id: String)

