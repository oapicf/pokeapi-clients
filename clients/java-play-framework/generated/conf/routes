# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /api                        controllers.ApiDocController.api


#Functions for Berries API
GET     /api/v2/berry-firmness/                     controllers.BerriesApiController.berryFirmnessList(request: Request)
GET     /api/v2/berry-firmness/:id/                     controllers.BerriesApiController.berryFirmnessRetrieve(request: Request, id: String)
GET     /api/v2/berry-flavor/                     controllers.BerriesApiController.berryFlavorList(request: Request)
GET     /api/v2/berry-flavor/:id/                     controllers.BerriesApiController.berryFlavorRetrieve(request: Request, id: String)
GET     /api/v2/berry/                     controllers.BerriesApiController.berryList(request: Request)
GET     /api/v2/berry/:id/                     controllers.BerriesApiController.berryRetrieve(request: Request, id: String)

