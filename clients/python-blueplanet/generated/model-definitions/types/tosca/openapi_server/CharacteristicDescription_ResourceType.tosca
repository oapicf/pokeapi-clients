version     = "1.0"
description = "Defines a CharacteristicDescription"
authors     = ["F. Bar (foo@bar.baz)"]

imports {
  Root = tosca.resourceTypes.Root
  LanguageSummary = openapi_server.resourceTypes.LanguageSummary
}
resourceTypes {

  CharacteristicDescription {
    title = CharacteristicDescription
